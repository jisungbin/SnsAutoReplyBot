<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="17dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activty.PermissionAgree"
    tools:showIn="@layout/activity_permission_agree">

    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/please_agree_use_permission"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/why_need_permission_first"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agree"
        android:layout_centerInParent="true"
        android:text="@string/string_agree_permission"/>

    <RelativeLayout
        android:id="@+id/adView"
        android:layout_above="@id/copyright"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/copyright"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/string_copyright" />

</RelativeLayout>